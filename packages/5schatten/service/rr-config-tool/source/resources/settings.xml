<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
  <category  label="30000">
    <setting label="30001" type="action" action="RunAddon(service.rr-config-tool)" />
    <setting id="RR_AUDIO_DEVICE"  type="text"   label="30002"   default="sysdefault:CARD=PCH" enable="false" />
    <setting id="RR_AUDIO_BACKEND" type="select" label="30003"   values="ALSA|PulseAudio" default="ALSA"/>
    <setting id="RR_PA_UDEV"       type="bool"   label="30004"   default="true" visible="eq(-1,PulseAudio))" />
    <setting id="RR_PA_TSCHED"     type="bool"   label="30005"   default="true" visible="eq(-2,PulseAudio))" />
  </category>
  <category  label="30100">
    <setting id="RR_KMS"                  type="bool"   label="30101"                    default="false" />
    <setting id="RR_REFRESH_RATE_AMIGA"   type="select" label="30102" values="50Hz|60Hz" default="50Hz"/>
    <setting id="RR_REFRESH_RATE_ATARI"   type="select" label="30103" values="50Hz|60Hz" default="50Hz"/>
    <setting id="RR_REFRESH_RATE_C64"     type="select" label="30104" values="50Hz|60Hz" default="50Hz"/>
    <setting id="RR_REFRESH_RATE_DOLPHIN" type="select" label="30105" values="60Hz|50Hz" default="60Hz"/>
  </category>
  <category  label="30200">
    <setting id="RR_QT_AUTO_SCREEN_SCALE_FACTOR"  type="bool"   label="30201" default="true" />
    <setting id="RR_QT_SCALE_FACTOR"              type="slider" label="30202" default="1" range="0.1,0.1,2" option="float" visible="eq(-1,false))" />
    <setting id="RR_QT_QPA_EGLFS_PHYSICAL_WIDTH"  type="number" label="30203" default="576" />
    <setting id="RR_QT_QPA_EGLFS_PHYSICAL_HEIGHT" type="number" label="30204" default="324" />
  </category>
  <category  label="30300">
    <setting id="RR_EMULATION_DEMOS"    type="bool" label="30301" default="true" />
    <setting id="RR_EMULATION_ID_GAMES" type="bool" label="30302" default="true" />
  </category>
  <category  label="30400">
    <setting id="RR_SPOTIFY_BRANCH_SELECT" type="select" label="30401" values="stable|dev" default="stable"/>
  </category>
</settings>
