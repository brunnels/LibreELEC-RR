. /etc/profile

kodifreeze.sh freeze

# Set fbdev geometry
set_fbdev_mode

# Launch RetroArch
/usr/bin/retroarch -v "$@" > /var/log/retroarch.log 2>&1

pidof emulationstation > /dev/null 2>&1 || kodifreeze.sh unfreeze
